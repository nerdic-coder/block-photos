{
  "name": "block-photos",
  "version": "2.0.0",
  "private": false,
  "description": "The app for storing your photos privatly in the cloud!",
  "repository": {
    "type": "git",
    "url": "https://github.com/nerdic-coder/block-photos"
  },
  "license": "MIT",
  "author": "Johan Axelsson",
  "main": "electron/main.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "stencil build",
    "build:android": "npm run build && npx cap copy android",
    "build:ios": "npm run build && npx cap copy ios",
    "build:web": "npm run build",
    "electron": "electron-forge start",
    "make": "npm run build && npx cap copy electron && electron-forge make",
    "package": "npm run build && npx cap copy electron && electron-forge package",
    "publish": "npm run build && npx cap copy electron && electron-forge publish",
    "serve": "stencil build --dev --watch --serve",
    "start": "npm run build && npx cap copy electron && npm run electron",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watch",
    "e2e": "nightwatch",
    "selenium": "selenium-standalone install && selenium-standalone start",
    "format": "npx prettier --write src/**"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "Block Photos",
        "icon": "electron/icons/mac/icon",
        "ignore": [
          ".vscode",
          "coverage",
          "android",
          "ios",
          "public",
          "www"
        ],
        "prune": true,
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-dmg"
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "block_photos",
            "iconUrl": "https://raw.githubusercontent.com/nerdic-coder/block-photos/master/electron/icons/mac/icon.ico",
            "setupIcon": "electron/icons/mac/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip"
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "options": {
              "maintainer": "Johan Axelsson",
              "homepage": "https://block-photos.com/"
            }
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "nerdic-coder",
              "name": "block-photos"
            },
            "prerelease": true
          }
        }
      ],
      "github_repository": {
        "owner": "nerdic-coder",
        "name": "block-photos"
      }
    }
  },
  "dependencies": {
    "@capacitor/core": "^1.0.0-beta.17",
    "@ionic/core": "4.0.0",
    "@sentry/browser": "4.5.3",
    "blockstack": "18.2.1",
    "blueimp-load-image": "2.20.1",
    "cors": "2.8.5",
    "electron-is-dev": "1.0.1",
    "electron-squirrel-startup": "^1.0.0",
    "is-electron": "^2.2.0",
    "localforage": "1.7.3",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@capacitor/android": "^1.0.0-beta.17",
    "@capacitor/cli": "^1.0.0-beta.17",
    "@capacitor/ios": "^1.0.0-beta.17",
    "@electron-forge/cli": "6.0.0-beta.32",
    "@electron-forge/maker-appx": "6.0.0-beta.32",
    "@electron-forge/maker-deb": "6.0.0-beta.32",
    "@electron-forge/maker-dmg": "6.0.0-beta.32",
    "@electron-forge/maker-pkg": "6.0.0-beta.32",
    "@electron-forge/maker-rpm": "6.0.0-beta.32",
    "@electron-forge/maker-squirrel": "6.0.0-beta.32",
    "@electron-forge/maker-zip": "6.0.0-beta.32",
    "@electron-forge/publisher-github": "6.0.0-beta.32",
    "@stencil/core": "0.17.1",
    "@types/jest": "23.3.13",
    "@types/puppeteer": "1.12.0",
    "electron": "4.0.4",
    "husky": "1.3.1",
    "jest": "24.0.0",
    "jest-cli": "24.0.0",
    "nightwatch": "1.0.18",
    "prettier": "1.16.4",
    "pretty-quick": "1.10.0",
    "puppeteer": "1.12.1",
    "rollup-plugin-node-builtins": "^2.1.2",
    "selenium-standalone": "^6.15.4",
    "tslint": "^5.12.1",
    "tslint-ionic-rules": "0.0.21",
    "workbox-build": "3.6.3"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "productName": "block-photos",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
